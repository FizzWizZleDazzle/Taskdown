{
  "name": "taskdown-workspace",
  "version": "1.0.0",
  "description": "Taskdown - Jira-style Markdown parser and web application",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "npm run build --workspaces",
    "test": "npm run test --workspaces",
    "dev:parser": "npm run dev --workspace=packages/taskdown-parser",
    "build:parser": "npm run build --workspace=packages/taskdown-parser",
    "test:parser": "npm run test --workspace=packages/taskdown-parser"
  },
  "keywords": ["taskdown", "markdown", "jira", "parser", "workspace"],
  "author": "FizzWizZleDazzle",
  "license": "MIT",
  "devDependencies": {
    "typescript": "^5.8.3"
  }
}